<%- include("partials/header") -%>
    <main>
        <section id="section-compose">
            <h2>Compose</h2>

            <form action="/compose" method="post">
                <label>Title</label>
                <input type="text" required name="blogPostTitle" placeholder="Title" />
                <label>Image url</label>
                <input type="text" name="blogPostPhotos" placeholder="Image url" />
                <label>Post</label>
                <textarea cols="20" required rows="5" name="blogPostMessage" placeholder="Post"></textarea>
                <button class="submit-button">Submit</button>
            </form>
        </section>
    </main>
    </body>

    </html>